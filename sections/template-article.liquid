{% assign number_of_comments = article.comments_count %}
{% if comment and comment.created_at %}
  {% assign number_of_comments = article.comments_count %}
{% endif %}

{% capture author %}<strong>{{ article.author }}</strong>{% endcapture %}
{% capture date %}<time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: format: 'abbreviated_date' }}</time>{% endcapture %}

<article itemscope itemtype="https://schema.org/BlogPosting">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'featured_image' %}
        {% if article.image %}
          <img src="{{ article.image | img_url: 'master' }}" alt="article image" class="img-fluid rounded w-100 my-2">
        {% endif %}
      {% when 'title' %}
        <div class="article-title my-2">
          <h1 class="display-4">{{ article.title }}</h1>
        </div>
      {% when 'article_meta' %}
        <div class="article-meta my-2">
          <p class="lead">Published on {{ date }} by {{ author }}.</p>
        </div>
      {% when 'content' %}
        <div class="my-2">{{ article.content }}</div>
      {% else %}

    {% endcase %}
  {% endfor %}

  <div class="comment-section">
    {% if blog.comments_enabled? %}
      <h2>{{ number_of_comments }} comment{% if number_of_comments > 1%}s{% endif %}</h2>
      {% paginate article.comments by 5 %}
        {% for comment in article.comments %}
          <div class="card shadow rounded-0 my-3">
            <div class="card-header">
              <p>{{ comment.author }} on <small>{{ comment.created_at | date: format: 'long'}}</small></p>
            </div>

            <div class="card-body">
              <p>{{ comment.content }}</p>
            </div>
          </div>
        {% endfor %}
        {% render 'pagination', paginate: paginate %}
      {% endpaginate %}

      <div class="my-5">
        {% form 'new_comment', article %}
          {% include 'form-errors', form: form %}

          <div class="my-5 p-2 bg-light">
            <h2 class="h4 my-3">Add your comment</h2>
            <div class="form-floating my-3">
              <input class="form-control" type="text" name="comment[author]" id="CommentAuthor" placeholder="name" value="{{ form.author }}" autocapitalize="words">
              <label for="CommentAuthor">name</label>
            </div>

            <div class="form-floating my-3">
              <input class="form-control" type="email" name="comment[email]" id="CommentEmail" placeholder="email" value="{{ form.email }}" autocorrect="off" autocapitalize="off">
              <label for="CommentEmail">email</label>
            </div>

            <div class="form-floating my-3">
              <textarea class="form-control" name="comment[body]" id="CommentBody" placeholder="message" style="height: 120px">{{ form.body }}</textarea>
              <label for="CommentBody">message</label>
            </div>

            <input class="btn btn-primary" type="submit" value="post">
          </div>
        {% endform %}
      </div>
    {% endif %}
  </div>
</article>


{% schema %}
  {
    "name": "Article Section",
    "class": "col-md-8 col-12",
    "tag": "section",
    "blocks": [
      {
        "type": "featured_image",
        "name": "Featured Image",
        "limit": 1
      },
      {
        "type": "title",
        "name": "Title",
        "limit": 1
      },
      {
        "type": "article_meta",
        "name": "Article Meta",
        "limit": 1
      },
      {
        "type": "content",
        "name": "Content",
        "limit": 1
      }
    ]
  }
{% endschema %}
