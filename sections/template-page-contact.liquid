<div class="container">
  <div class="row">
    <div class="col-12 my-5">
      <h1 class="text-center">{{ page.title }}</h1>
    </div>
    <div class="row">
      {% form 'contact' %}
        {% if form.posted_successfully? %}
          <div class="alert alert-success">
            Thank you for your contact
          </div>
        {% endif %}

        {{ form.errors | default_errors }}

        <div class="row my-3">
          <div class="col-12 col-md-6">
            <label for="ContactFormName">Name</label>
            <input class="form-control" type="text" id="ContactFormName" name="contact[name]">
          </div>

          <div class="col-12 col-md-6">
            <label for="ContactFormEmail">Email</label>
            <input class="form-control" type="email" id="ContactFormEmail" name="contact[email]">
          </div>
        </div>

        <div class="row my-3">
          <div class="col-12">
            <label for="ContactOrderNumber">Order #</label>
            <input class="form-control" type="text" id="ContactOrderNumber" name="contact[order_number]">
          </div>
        </div>

        <div class="row my-3">
          <div class="col-12">
            <label for="ContactFormPhone">Phone</label>
            <input class="form-control" type="tel" id="ContactFormPhone" name="contact[phone]">
          </div>
        </div>

        <div class="row my-3">
          <div class="col-12">
            <label for="ContactFormMessage">Message</label>
            <textarea class="form-control" rows="10" id="ContactFormMessage" name="contact[body]"></textarea>
          </div>
        </div>

        <input class="btn btn-success my-3 w-100" type="submit" value="Send">
      {% endform %}
    </div>
  </div>
</div>
