<nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container">
    <a class="navbar-brand" href="#">Store</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
        {% for link in linklists.main-menu.links %}
          {% assign child_list_handle = link.title | handleize %}
          {% if linklists[child_list_handle].links != blank %}
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="{{ link.url }}">{{ link.title }}</a>
            </li>
            [{% for childlink in linklists[child_list_handle].links %}
              <ul>
                <li class="nav-item">
                  <a class="nav-link" href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
                </li>
              </ul>
            {% endfor %}]
          {% else %}
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endif %}
        {% endfor %}
        <li class="nav-item">
          <a class="nav-link" href="/cart">Cart</a>
        </li>
      </ul>

      <ul class="navbar-nav mx-3">
        {% if shop.customer_accounts_enabled %}
          {% if customer %}
            <li class="nav-item">
              <a class="nav-link" href="{{ routes.account_url }}">Account</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{{ routes.account_logout_url }}">Log Out</a>
            </li>
          {% else %}
              <li class="nav-item">
                <a class="nav-link" href="{{ routes.account_login_url }}">Log In</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ routes.account_register_url }}">Sign In</a>
              </li>
          {% endif %}
        {% endif %}
      </ul>

      <form class="my-auto" action="/search" method="get" role="search">
        <input class="form-control rounded-0 form-control-lg" type="search" name="q" value="{{ search.terms | escape }}">
      </form>
    </div>
  </div>
</nav>
