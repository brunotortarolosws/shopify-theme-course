<div class="{{ section.settings.container }} my-5">

  {% for block in section.blocks %}
    {% case block.type %}
      {% when "page_title" %}
        <h1>{{ page.title }}</h1>
      {% when "page_date" %}
        {% if section.settings.show_publishing_date %}
          <small>{{  page.published_at | date: '%B %d, %Y' }}</small>
        {% endif %}
      {% when "page_content" %}
        <div class="my-5">{{ page.content }}</div>
      {% else %}
    {% endcase %}
  {% endfor %}
</div>

{% schema %}
  {
    "name": "Page Settings",
    "settings": [
      {
        "type": "select",
        "id": "container",
        "label": "Layout",
        "options": [
          {
            "value": "container",
            "label": "Container"
          },
          {
            "value": "container-fluid",
            "label": "Container Fluid"
          }
        ],
        "default": "container"
      },
      {
        "type": "checkbox",
        "id": "show_publishing_date",
        "label": "Show Publishing Date",
        "default": false
      }
    ],
    "blocks": [
      {
        "type": "page_title",
        "name": "Title",
        "limit": 1
      },
      {
        "type": "page_date",
        "name": "Date",
        "limit": 1
      },
      {
        "type": "page_content",
        "name": "Content",
        "limit": 1
      }
    ]

  }
{% endschema %}
