<div class="container py-5 my-5">
  <div class="login-form">
    {% form 'create_customer' %}
      {% include 'form-errors', form: form %}

      <h1 class="h3 text-center">Create Account</h1>

      <label for="firstName">First Name</label>
      <input class="form-control rounded-0 my-2" type="text" name="customer[first_name]" />

      <label for="lastName">Last Name</label>
      <input class="form-control rounded-0 my-2" type="text" name="customer[last_name]" />

      <label for="emailAddress">Email Address</label>
      <input class="form-control rounded-0 my-2" type="email" name="customer[email]" />

      <label for="password">Password</label>
      <input class="form-control rounded-0 my-2" type="password" name="customer[password]" />

      <input type="submit" value="Register" class="btn btn-primary btn-lg w-100 rounded-0">
    {% endform %}
  </div>
</div>
